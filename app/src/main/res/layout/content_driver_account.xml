<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_driver_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ansteph.com.beecabfordrivers.view.account.DriverAccount"
    tools:showIn="@layout/activity_driver_account">


    <TableLayout
        android:layout_marginTop="24dp"
        android:paddingRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:text="My driver ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDriverID"
                android:gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Current Company:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCompany"
                android:gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Account Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:paddingTop="16dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_acc_status_green"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="end"
                android:id="@+id/imgStatus"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Next Payment Date: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"/>

            <TextView
                android:text="--/--/----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNextpayment"
                android:gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>











</LinearLayout>
