<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ansteph.com.beecabfordrivers.view.extraAction.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="3dp"
        >


        <ViewAnimator
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewAnimator"
            android:layout_gravity="center_horizontal|top"

            android:background="@color/colorAccent" >

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                <ImageView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/goleft1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/ic_go_left"
                    android:layout_gravity="left|center_vertical"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lnImage1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                </LinearLayout>

                <ImageView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/goright1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:src="@mipmap/ic_go_right"
                    android:layout_gravity="right|top"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:id="@+id/Changepic1"
                    android:layout_gravity="center_horizontal|bottom"/>

            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                <ImageView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/goleft2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/ic_go_left"
                    android:layout_gravity="left|center_vertical"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lnImage2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                </LinearLayout>

                <ImageView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/goright2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:src="@mipmap/ic_go_right"
                    android:layout_gravity="right|top"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:id="@+id/Changepic2"
                    android:layout_gravity="center_horizontal|bottom"/>

            </FrameLayout>


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                <ImageView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/goleft3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/ic_go_left"
                    android:layout_gravity="left|center_vertical"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lnImage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                </LinearLayout>

                <ImageView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/goright3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_go_right"
                    android:layout_gravity="right|top"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:id="@+id/changepic3"
                    android:layout_gravity="center_horizontal|bottom"/>

            </FrameLayout>



        </ViewAnimator>



    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:elevation="3dp"
            android:layout_marginBottom="6dp"
            >
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Full Name"
                    android:id="@+id/textView1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="John Doe"
                    android:id="@+id/txtfullname"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Cellphone"
                    android:id="@+id/textView3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="082 111 1111"
                    android:id="@+id/txtCellphone"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Updated Rating"
                    android:id="@+id/textView9"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3"
                    android:id="@+id/txtRating"
                    android:layout_below="@+id/textView9"
                    android:layout_centerHorizontal="true"/>

                />
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Email"
                    android:id="@+id/txtbidtitle"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="tony@gmail.com"
                    android:id="@+id/txtemail"
                    android:layout_below="@+id/txtbidtitle"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgEditEmail"
                    android:src="@mipmap/ic_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>






            <RelativeLayout
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Car Model"
                    android:id="@+id/textView4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Leopard"
                    android:id="@+id/txtCarModel"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgEditCarModel"
                    android:src="@mipmap/ic_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Current City"
                    android:id="@+id/textView8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Port Elizabeth"
                    android:id="@+id/txtCurrentCity"
                    android:layout_below="@+id/textView8"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgEditCurrentCity"
                    android:src="@mipmap/ic_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>



            <RelativeLayout
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Number Plate"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="XXX 999 EC"
                    android:id="@+id/txtNumberPlate"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgEditNumberPlate"
                    android:src="@mipmap/ic_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Cab Licence Number"
                    android:id="@+id/textView6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="xxxxxxxxxxxxxxxxx"
                    android:id="@+id/txtCabLicence"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgEditCabLicence"
                    android:src="@mipmap/ic_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Year of Licence"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:text="9999"
                    android:id="@+id/txtyear"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgEditYear"
                    android:src="@mipmap/ic_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>





            <RelativeLayout

                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <Button
                    style="@style/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Submit Change"
                    android:id="@+id/button2"
                    android:layout_centerVertical="true"
                    />

                <Button
                    style="@style/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/button3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
