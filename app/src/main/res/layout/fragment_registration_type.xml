<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="4"
              android:background="@color/colorAccent"
             >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnTypeCompany"
                android:layout_width="160dp"
                android:layout_height="146dp"
                android:background="@null"
                android:padding="25dp"
               android:layout_centerInParent="true"

                android:layout_margin="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/fleetsil"

                />

            <TextView
                android:text="In a fleet"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnTypeCompany"
                android:layout_gravity="right|center_vertical"
                android:textColor="@color/white"
                android:id="@+id/textView12"/>
        </RelativeLayout>


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnTypeFreelancer"
                android:layout_width="160dp"
                android:layout_height="136dp"
                android:background="@null"
                android:padding="25dp"
                android:layout_margin="25dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/carsil"

                />


            <TextView
                android:text="Independent"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnTypeFreelancer"
                android:layout_gravity="right|center_vertical"
                android:textColor="@color/white"
                android:id="@+id/textView13"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom"
        >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/pick_a_role"
                  android:layout_gravity="right|center_vertical"
                  android:textColor="@color/white"
                  android:drawableLeft="@mipmap/ic_vusi"/>

    </LinearLayout>



</LinearLayout>
